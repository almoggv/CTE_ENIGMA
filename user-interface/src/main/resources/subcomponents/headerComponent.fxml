<GridPane fx:id="headerComponentRootPane" alignment="BOTTOM_LEFT" minHeight="100.0" minWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.main.java.controller.HeaderController">
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="10.0" />
      <ColumnConstraints hgrow="NEVER" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="625.0" />
      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints maxHeight="10.0" minHeight="10.0" prefHeight="10.0" vgrow="NEVER" />
      <RowConstraints minHeight="10.0" vgrow="NEVER" />
      <RowConstraints maxHeight="36.0" minHeight="10.0" prefHeight="36.0" vgrow="NEVER" />
      <RowConstraints maxHeight="10.0" minHeight="10.0" prefHeight="10.0" vgrow="NEVER" />
      <RowConstraints maxHeight="49.0" minHeight="10.0" prefHeight="24.0" vgrow="NEVER" />
      <RowConstraints maxHeight="17.66668701171875" minHeight="5.0" prefHeight="9.0" vgrow="ALWAYS" />
   </rowConstraints>
   <children>
      <Label fx:id="titleLabel" text="Enigma Machine" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
      <HBox fx:id="browseFilesHBox" alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <children>
            <Label fx:id="selectedFileLabel" maxWidth="-Infinity" minWidth="-Infinity" text="Chosen file: " HBox.hgrow="NEVER" />
            <TextField fx:id="selectedFileName" editable="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#onSelectFileTextFieldAction" prefHeight="25.0" prefWidth="450.0" HBox.hgrow="ALWAYS" />
